<%= form_for @wiki do |f| %>

  <div class="field">
    <%= f.label :title  %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 20, class: 'form-control', placeholder: "Enter Wiki body" %>
  </div>

  <div class="field">
    <% if current_user.admin? || current_user.premium? %>
    <%= f.label :private, class: 'checkbox' do %>
        <%= hidden_field_tag :private, '' %>
        <%= f.check_box :private %> Private Wiki?
    <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>
