<div class="wrapper">
  <div class="header">
    <%= render "layouts/header" %>
  </div>
  <div class="menu">
    <%= render "layouts/menu" %>
  </div>
  <div class="content">
    <div class="row">
      <h1><%= @wiki.title %></h1>
      <p>Created by: <%= @wiki.user.email %></p>
      <p> Private? <%= @wiki.private %></p>
      <div class="col-md-8">
        <p><%= markdown(@wiki.body) %></p>
      </div>

      <div class="col-md-4">
      <% if policy(@wiki).update? %>
        <%= link_to "Edit wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% end %>
      </div>

      <div class="col-md-4">
      <% if policy(@wiki).destroy? %>
        <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
      <% end %>
      </div>

    </div>
  </div>
  <%= render "layouts/footer" %>
</div>





