<div class="wrapper">
  <div class="header">
    <%= render "layouts/header" %>
  </div>
  <div class="menu">
    <%= render "layouts/menu" %>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-8">
        <% @wikis.each do |wiki| %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to wiki.title, wiki %>
              </h4>
              <small>
               <p> Created by: <%= wiki.user.email %></p>
                <%= wiki.body %>
              </small>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <!--<=% if policy(@wiki).create? %>-->
          <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success'  %>
        <!--<=% end %>-->
      </div>

    </div>
  </div>
  <%= render "layouts/footer" %>
</div>
